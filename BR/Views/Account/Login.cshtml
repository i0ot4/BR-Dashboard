@model LoginVM
@{
    Layout = null;
    string ReturnUrl = "";
    if (ViewData != null)
    {
        ReturnUrl = ViewData["ReturnUrl"] as string;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link rel="stylesheet" href="~/plugins/bootstrap-5.3.2-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/fonts/boxicons.css">

    <link rel="stylesheet" href="~/plugins/datatables-bs5/datatables.bootstrap5.css">
    <link rel="stylesheet" href="~/plugins/datatables-responsive-bs5/responsive.bootstrap5.css">
    <!-- <link rel="stylesheet" href="plugins/DataTables/DataTables-1.13.8/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="plugins/DataTables(1)/Responsive-2.5.0/css/responsive.bootstrap.min.css"> -->
    <link rel="stylesheet" href="~/plugins/node-waves/waves.css">
    <link rel="stylesheet" href="~/plugins/materialdesingicons/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/css/custm-table-cell-content.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body dir="rtl">


<div class="authentication-wrapper authentication-cover">
    <div class="authentication-inner row m-0">

        <!-- Login -->
        <div class="authentication-bg d-flex col-12 col-lg-5 col-xl-4 align-items-center p-4 p-sm-5">
            <div class="w-px-400 mx-auto">
                <!-- Logo -->
                <div class="app-brand mb-4">
                    <a href="#" class="app-brand-link gap-2 mb-2">

                        <img src="~/images/BRlogo.png"
                                 alt="  Logo"
                             width="40px"
                             height="40px" />

                            <span class="app-brand-text demo h3 fw-bold mb-0">إعمار وبناء</span>
                    </a>
                </div>
                <!-- /Logo -->
                <h4 class="mb-2">مرحبا بك في إعمار وبناء 👋</h4>


                <form id="formAuthentication" class="mb-3" asp-action="Login" method="post" dir="rtl">
                        <input type="hidden" name="ReturnUrl" value="@ReturnUrl" />
                    <div class="alert-danger" asp-validation-summary="All" style="color:red"></div>
                    <input type="hidden" asp-for="DeviceId" value="nashwandevice" />
                    <div class="mb-3 text-right" >
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input class="form-control" asp-for="PhoneNumber" autofocus />

                    </div>
                    <div class="form-password-toggle mb-3">
                        <div class="d-flex justify-content-between">
                            <label class="form-label" asp-for="Password"></label>
                            <a href="#">
                                <small></small>
                            </a>
                        </div>
                        <div class="input-group input-group-merge">
                            <input type="password"
                                   class="form-control"
                                   asp-for="Password"
                                   placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                   aria-describedby="password" />
                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                        </div>
                    </div>
                    @*     <div class="mb-3">
                    <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="remember-me" />
                    <label class="form-check-label" for="remember-me"> Remember Me </label>
                    </div>
                    </div>*@
                    <button class="btn btn-primary d-grid w-100">تسجيل الدخول</button>
                </form>




            </div>
        </div>
        <!-- /Login -->
        <!-- /Left Text -->
        <div class="d-none d-lg-flex col-lg-7 col-xl-8 align-items-center">
            <div class="flex-row text-center mx-auto">
                <img src="~/images/BRlogo.png"
                     alt="Auth Cover Bg color"
                     width="520"
                     class="img-fluid authentication-cover-img"
                     data-app-light-img="pages/login-light.png"
                     data-app-dark-img="pages/login-dark.png" />
                <div class="mx-auto">
                    <h3>إعمار وبناء </h3>
                    <p>
                    </p>
                </div>
            </div>
        </div>
        <!-- /Left Text -->
    </div>
</div>


    <script src="~/plugins/bootstrap-5.3.2-dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/plugins/jquery/jquery-3.7.1.min.js"></script>
    <script src="~/plugins/DataTables/DataTables-1.13.8/js/jquery.dataTables.js"></script>
    <script src="~/plugins/datatables-bs5/datatables-bootstrap5.js"></script>
    <script src="~/plugins/DataTables(1)/Responsive-2.5.0/js/dataTables.responsive.js"></script>
    <script src="~/plugins/datatables-responsive-bs5/responsive.bootstrap5.js"></script>
    <script src="~/js/tables-datatables-advanced.js"></script>
    <script src="~/js/off-canvas.js"></script>
    <script src="~/js/template.js"></script>
    <script src="~/js/dashboard.js"></script>
    <script src="~/plugins/jquery-countto/jquery.countTo.js"></script>
    <script src="~/js/script.js"></script>

    
</body>
