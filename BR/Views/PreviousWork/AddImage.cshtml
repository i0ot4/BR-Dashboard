@model PreviousWorkImage
@using System.Globalization
@using BR.Models.VMs
@using BR.helper
@using Microsoft.AspNetCore.Mvc.Localization
@inject ISharedViewLocalizer SharedLocalizer
@{
    var url = Context.Request.Path + Context.Request.QueryString;
    var currentCulture = CultureInfo.CurrentCulture;
    var supportedCultures = new[]
            {
        new CultureInfo("ar-YE"),
        new CultureInfo("en-US"),
        // Add other supported cultures here...
    };
    var id = ViewData["id"];
}

<div class="row page-titles m-0">
    <!-- <div class="col-sm-6 p-md-0">
        <div class="welcome-text text-right">
            <h4 class="text-primary">كل الحالات</h4>
        </div>
    </div> -->
    <div class="col-sm-6 p-md-0 mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">@SharedLocalizer["home"]</a></li>
            <li class="breadcrumb-item active"><a href=""> @SharedLocalizer["addContractor"]</a></li>
        </ol>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="mb-3">@SharedLocalizer["addData"]</h4>
        <form asp-action="AddImage" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" value="@id" name="id" />
            
            <input type="hidden" asp-for="ImagePath" />
            <div class="form-group col-md-6 col-sm-12">
                <label class="form-label" asp-for="ImageTitle"></label><br>
                <input asp-for="ImageTitle" class="form-control form-control-lg" placeholder="">
                <span class="text-danger field-validation-valid" asp-validation-for="ImageTitle"></span>
                <small class="text-muted"></small>
            </div>
            <input type="hidden" asp-for="ImagePath" value=""></input>
            <div class="form-group col-md-6 col-sm-12">
                <label class="form-label" asp-for="ImagePath"></label><br>
                <input name="image" type="file" class="form-control form-control-lg" placeholder="">
                <span class="text-danger field-validation-valid" asp-validation-for="ImagePath"></span>
                <small class="text-muted"></small>
            </div>


            <div class="form-group col-md-12 col-sm-12 mt-4 ">
                <a class="btn btn-secondary  w-20" href="#">@SharedLocalizer["cancel"]</a>
                <input type="submit" class="btn btn-primary w-40 " value="@SharedLocalizer["Add"]">
            </div>
        </form>
    </div>
</div>